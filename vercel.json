{
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "(?<host>.*\\.vercel\\.app)"
        }
      ],
      "_comment": "Redirect all Vercel deployment URLs to the custom domain. Update courseforgeai.org if deploying to a different domain.",
      "destination": "https://courseforgeai.org/:path*",
      "permanent": true
    }
  ]
}
