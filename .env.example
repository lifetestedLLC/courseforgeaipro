# Authentication
# Generate a secret with: openssl rand -base64 32
NEXTAUTH_SECRET=your-secret-key-here
# For production, use your custom domain: https://courseforgeai.org
# For local development, use: http://localhost:3000
# Note: The app automatically detects the domain from request headers,
# but this should be set to your custom domain for consistency.
NEXTAUTH_URL=http://localhost:3000

# OpenAI API
OPENAI_API_KEY=your-openai-api-key-here

# Stripe
STRIPE_SECRET_KEY=your-stripe-secret-key-here
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret-here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key-here

# Stripe Price IDs (create these in your Stripe dashboard)
STRIPE_STARTER_PRICE_ID=price_starter_id_here
STRIPE_PROFESSIONAL_PRICE_ID=price_professional_id_here
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_id_here

# Database
# For local development: Run `npx prisma dev` and copy the output URL here
# Example: DATABASE_URL="prisma+postgres://localhost:51213/?api_key=..."
# For production: Use your PostgreSQL connection string
# Example: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="your-database-url-here"
